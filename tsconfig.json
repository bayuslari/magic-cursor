{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
